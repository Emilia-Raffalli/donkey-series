{% extends 'base.html.twig' %}

{% block title %}Hello CategoryController!{% endblock %}

{% block body %}


<div class="container">
    <h2>Affichage des catégories</h2>

   
    {# <ul>
        <li> <a href ="{{ path('app_category_show', {'categoryName': category.name}) }}"> {{ category.name }} </a></li>
    </ul> #}

    {{ form(form) }}
    <table class="table-category table table-striped">
        <thead>
            <tr>
            <th scope="col" colspan="4"> Toutes les catégories </th>
            </tr>
        </thead>
        <tbody>
         {% for category in categories %}
            <tr>
                <th scope="row"><a href ="{{ path('app_category_show', {'categoryName': category.name}) }}">{{ category.name }}</a></th>
                <td><a href ="{{ path('app_category_edit', {'id': category.id}) }}"> Modifier </a></td>
                <td><a href ="{{ path('app_category_delete', {'id': category.id}) }}"> Supprimer </a></td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

<div class="navigation">
        {{ knp_pagination_render(categories) }}
</div>


  
</div>
{% endblock %}


